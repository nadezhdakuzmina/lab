#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    bool N;
    int a, b, c;
    cout << "введите a, b, c";
    cin >> a >> b >> c ;
    if ((c*c == sqrt( (a*a+b*b) 2)) or  (a*a == sqrt( (c*c+b*b) 2)) or  (b*b  == sqrt( (a*a+c*c) 2))) {
        N=true;
    } else
        N=false;
        cout << N << '\n' ;
    return 0;
}

#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    int a, b, c, s;
    cout << "введите a, b, c";
    cin >> a >> b >> c ;
    if (a>b) {
        if (b>c) {
            s=a+b;
        } else s=a+c;
    } else s=b+c;
        cout << s  ;
    return 0;
}
