//4.1
#include <iostream>
#include <cmath>
using namespace std;
int main()
{  int a, b; // создаём переменные
cout << "введите длину и ширину"; // просим пользователя задать переменные
cin >> a >> b; // пользователь задаёт переменные
    cout << "S=" << a*b << "P=" << (a+b)/2; //выводим результат
 return 0;
}
//4.2
#include <iostream>
#include <cmath>
#define P 3.14 // создаём константу
using namespace std;
int main()
{  int d; // создаём переменные
cout << "введите диаметр"; // просим пользователя задать переменные
cin >> d;  // пользователь задаёт переменные
    cout << "L=" << P*d ;  //выводим результат
 return 0;
}
//4.3
#include <iostream>
#include <cmath>
using namespace std;
int main()
{  int a, b;
cout << "введите значения";
cin >> a >> b;  // пользователь задаёт переменные
    cout << (a+b)/2;  //выводим результат
 return 0;
}
//4.4
#include <iostream>
#include <cmath>
using namespace std;
int main()
{  int a, b;
cout << "введите значения";
cin >> a >> b;  // пользователь задаёт переменные
    cout << "сумма " << a+b << " разность "<< a-b << " произведение "<<a*b << " частное квадратов "<< (a*a)/(b*b);  //выводим результат
 return 0;
}
//4.5
#include <iostream>
#include <cmath>
using namespace std;
int main()
{  int a, b;
cout << "введите значения";
cin >> a >> b;  // пользователь задаёт переменные
    cout << "сумма " << a+b << " разность " << a-b << " произведение " << a*b << " частное модулей " <<  abs(a)/abs(b);  //выводим результат
 return 0;
}
