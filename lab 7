#include <iostream>
#include <cmath>
using namespace std;
int main()
{  int x;
float y;
const float P=3.14;
cout << "введите угол А";
cin >> x;
y = x*P/180;
    cout << y << " радиан";
 return 0;
}


#include <iostream>
#include <cmath>
using namespace std;
int main()
{  int x;
float y;
const float P=3.14;
cout << "введите угол А";
cin >> x;
y = x*180/P;
    cout << y << " градусов";
 return 0;
}

#include <iostream>
#include <cmath>
using namespace std;
int main()
{  int x, A, y;
float one;
cout << "введите значения x, A, y";
cin >> x >> A >> y;
one = A/x;
y=y*one;
    cout << "За 1 " << one << " За y " << y;
 return 0;
}

#include <iostream>
#include <cmath>
using namespace std;
int main()
{  int V1, V2, S, T;
cout << "введите значения V1, V2, T";
cin >> V1 >> V2 >> T;
S=(V1+V2)*T;
    cout << S;
 return 0;
}

#include <iostream>
#include <cmath>
using namespace std;
int main()
{ const int A=2, B=8;
int x;
x=-B/A;
    cout << "x=" << x;
 return 0;
}

#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    float a1, a2, b1, b2, c1, c2;
    float x, y;
    cout << "введите последовательно значения для системы уравнений";
    cin >> a1 >> b1 >>c1 >> a2 >> b2 >> c2;
    x=(c1*a2-c2*a1)/(b1*a2-b2*a1);
    y=(c1-a1*x)/b1;
    cout << "x=" << x << " y=" << y;
    return 0;
}
