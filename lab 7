#include <iostream>
#include <cmath>
using namespace std;
int main()
{  int x;
fload y;
const fload P=3.14;
cout << "введите значение x";
cin >> x;
y = x*P/180;
    cout << y, " радиан";
 return 0;
}

#include <iostream>
#include <cmath>
using namespace std;
int main()
{  int x;
fload y;
const fload P=3.14;
cout << "введите значение x";
cin >> x;
y = x*180/P;
    cout << y, " радиан";
 return 0;
}


#include <iostream>
#include <cmath>
using namespace std;
int main()
{  int x, A, y;
fload one;
cout << "введите значение x, A, y";
cin >> x >> A >> y;
one = A/x;
y=y*one;
    cout << one << y;
 return 0;
}

#include <iostream>
#include <cmath>
using namespace std;
int main()
{  int V1, V2, S, T;
cout << "введите значение V1, V2, T";
cin >> V1 >> V2 >> T;
S=(V1+V2)*T;
    cout << S;
 return 0;
}
